+++ b/ipc/chromium/src/third_party/libevent/evutil_rand.c
@@ -192,7 +192,7 @@ evutil_secure_rng_get_bytes(void *buf, size_t n)
 	ev_arc4random_buf(buf, n);
 }
 
-#if !defined(__OpenBSD__) && !defined(__FreeBSD__) && !defined(ANDROID)
